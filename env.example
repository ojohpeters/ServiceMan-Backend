# Environment variables for production deployment
# Copy this to .env file and fill in your values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-app-name.railway.app,your-custom-domain.com

# Database (Railway provides PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# Email Settings (for verification emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/1

# CORS Settings (allow your frontend domain)
FRONTEND_URL=https://your-frontend-domain.com,http://localhost:3000

# Sentry (optional - for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Paystack (for payments)
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
